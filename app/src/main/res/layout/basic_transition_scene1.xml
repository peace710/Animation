<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/basic_transition_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="@dimen/square_size_normal"
        android:layout_height="@dimen/square_size_normal"
        android:background="#990000"
        android:gravity="center"
        android:id="@+id/basic_transition_square"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_transition_square"
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/basic_transition_image"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_transition_image"
        android:src="@drawable/oval"
        android:id="@+id/basic_transition_oval"/>

</RelativeLayout>